
<div class="column is-4">
<div class="card">
  <div class="card-image">
    <figure class="image is-4by3">
      <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
    </figure>
  </div>

  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <p class="title is-4"><%= link_to food_item.name, food_item %></p>
      </div>
    </div>

    <div class="content">
      <p><strong>Price: <%= number_to_currency food_item.price %> </strong></p>
      <p>Category: <%= link_to food_item.food_category.name, food_item.food_category %> </p>
      <p><%= food_item.description %></p>
      <%# <br> %>
      <%# <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time> %>

    </div>
  </div>

  <footer class="card-footer">
    <a href="/food_items/<%= food_item.id%>" class="card-footer-item">View Details</a>
    <a href="#" class="card-footer-item">Add To Cart</a>
  </footer>
</div>
</div>